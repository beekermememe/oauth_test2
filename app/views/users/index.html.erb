<% title "Users" %>

<table>
  <tr>
    <th>Google</th>
    <th>Google Picture</th>
    <th>Name</th>
    <th>Google Email</th>
    <th>Google First Name</th>
    <th>Google Last Name</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.google_id %></td>
      <td><%= user.google_picture %></td>
      <td><%= user.name %></td>
      <td><%= user.google_email %></td>
      <td><%= user.google_first_name %></td>
      <td><%= user.google_last_name %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
